{
    "name":        "widgento/magento-core",
    "type":        "magento-module",
    "license":     "Widgento Modules License", 
    "description": "Widgento Core Module", 
    "authors": [
        {
            "name":  "Widgento",
            "email": "info@widgento.com"
        }
    ],
    "require-dev": {
        "magento-hackathon/magento-composer-installer": "*"
    },
    "require-dev": {
        "phing/phing": "2.*",
        "widgento/phing-license": "dev-master"
    },
    "repositories":[
        {"type": "git", "url": "https://github.com/widgento/magento-core.git"},
        {"type": "git", "url": "https://github.com/widgento/phing-license.git"}
    ],
    "extra": {
        "magento-root-dir": "var/src",
        "magento-deploystrategy": "copy",
        "magento-force": true,
        "map": [
            ["src/app/code/community/Widgento/Core/", "app/code/community/Widgento/Core/"],
            ["src/app/etc/modules/Widgento_Core.xml", "app/etc/modules/Widgento_Core.xml"],
            ["src/shell/widgento_uninstall.php", "shell/widgento_uninstall.php"]
        ]
    }
}
